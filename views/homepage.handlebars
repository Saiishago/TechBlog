<main class="container">
    <h2>Something here</h2>
    <div class="row">
        {{#each posts}}
        <section class="col-md-4">
            <div class="card mb-3">
                <div class="card-h">
                    <h3 class="card-t"><a href="/post/{{id}}">{{title}}</a></h3>
                </div>
                <div class="card-b">
                     <p>Date: {{format-date createdAt}} | Written/Made by: {{user.username}}</p>
                </div>
            </div>
        </section>
        {{/each}}
    </div>
</main>